<div class="descriptive-metadata">
  <h4><%= t("hyrax.works.form.descriptive_metadata_heading") %></h4>

  <div class="base-terms">
    <% f.object.primary_descriptive_metadata_fields.each do |term| %>
      <%= render_edit_field_partial(term, f: f) %>
    <% end %>
  </div>
  <% if f.object.secondary_descriptive_metadata_fields.any? %>
    <%= render partial: 'additional_fields', locals: {heading: 'hyrax.works.form.additional_descriptive_fields', metadata: 'extended-terms-descriptive-metadata', f: f, fields: f.object.secondary_descriptive_metadata_fields} %>
  <%end%>
</div>

